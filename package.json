{
  "name": "default",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p -l dev:*",
    "dev:next": "NODE_ICU_DATA=$(node-full-icu-path) next dev",
    "dev:open": "open http://localhost:3000",
    "build": "npm run build:production",
    "build:development": "run-s -l build:development:*",
    "build:production": "run-s -ls build:production:*",
    "build:development:generate": "DOTENV_CONFIG_PATH=./.env.development graphql-codegen -c codegen.yml -r dotenv/config",
    "build:development:next": "next build",
    "build:production:generate": "DOTENV_CONFIG_PATH=./.env.production graphql-codegen -c codegen.yml -r dotenv/config",
    "build:production:remove-proxy-build": "rimraf .next.proxy && echo \"Removed Next.js proxy build.\"",
    "build:production:next": "next build",
    "deploy": "run-s -ls deploy:production:*",
    "deploy:production:remove-build": "rimraf .next/* && echo \"Removed Next.js build.\"",
    "deploy:production:copy-proxy-build": "cp -r .next.proxy/* .next && echo \"Moved Next.js proxy build to Next.js build.\"",
    "start": "echo \"Info: run using 'NODE_ICU_DATA=$(node-full-icu-path) npx next start'\"",
    "lint": "npm run lint-production",
    "lint:development": "run-s -l lint:development:*",
    "lint:development:staged": "burst lint --fix --staged",
    "lint:production": "burst lint --fix",
    "postinstall": "is-ci || (cd .. && husky install)"
  },
  "dependencies": {
    "@types/styled-system": "^5.1.10",
    "axios": "^0.21.1",
    "clean-stack": "^3.0.1",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "highlight.js": "^10.6.0",
    "klot": "^0.1.0-alpha.1",
    "next": "^10.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@burst/ts-config": "0.0.4",
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.20.1",
    "@graphql-codegen/fragment-matcher": "^2.0.1",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/typescript": "^1.21.0",
    "@graphql-codegen/typescript-graphql-request": "^3.0.2",
    "@graphql-codegen/typescript-operations": "^1.17.14",
    "@types/node": "^14.14.30",
    "@types/react": "^17.0.2",
    "@types/styled-components": "^5.1.7",
    "dotenv": "^8.2.0",
    "full-icu": "^1.3.1",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.5"
  }
}
