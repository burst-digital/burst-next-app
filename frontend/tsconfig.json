{
  "extends": "./node_modules/@burst/ts-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@generated/*": ["generated/*"],
      "@pages/*": ["pages/*"],
      "@i18n/*": ["i18n/*"],
      "@misc/*": ["misc/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "constants",
    "components",
    "generated",
    "i18n",
    "misc",
    "pages"
  ],
  "exclude": ["node_modules"]
}
